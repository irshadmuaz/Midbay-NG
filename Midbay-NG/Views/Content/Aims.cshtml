@model IEnumerable<Midbay_NG.MyModels.Aim>

@{
    ViewBag.Title = "Aims";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Aims</h2>

<p>
    @Html.ActionLink("Create New", "AddAim")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.details)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.details)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditAim", new { id=item.Id }) |
       
            @Html.ActionLink("Delete", "DeleteAim", new { id=item.Id })
        </td>
    </tr>
}

</table>
